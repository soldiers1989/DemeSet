@using ZF.Web.Models.File
@{
    ViewBag.Title = "";
}

<div class="box">
    <form id="sumbitForm" name="sumbitForm">
        <div class="box-body">
            <input type="hidden" Id="Id" name="Id" value="@ViewBag.Id" />
            <input type="hidden" Id="Type" name="Type" value="0" />
            <div class="col-xs-12">
                <div class="form-group">
                    <label>链接地址</label><span class="text-danger">*</span>
                    <input type="text" class="form-control" id="LinkAddress" name="LinkAddress">
                </div>
                <div class="form-group">
                    <label>链接地址(App)</label><span class="text-danger">*</span>
                    <input type="text" class="form-control" id="AppLinkAddress" name="AppLinkAddress">
                </div>
                <div class="form-group">
                    <label>状态</label><span class="text-danger">*</span>
                    <select type="text" class="form-control" id="State" name="State"></select>
                </div>
                <div class="form-group">
                    <label>排序号</label><span class="text-danger">*</span>
                    <input type="number" class="form-control" min="0" max="100" id="OrderNo" name="OrderNo">
                </div>

                <div class="form-group">
                    <label>备注</label>
                    <input type="text" class="form-control" id="Remark" name="Remark">
                </div>
                <div class="form-group">
                    <label>封面图片(网站)(1200*200)</label><span class="text-danger">*</span>
                    @Html.Partial("UploadFilePartialView", new UploadFileDto()
               {
                   UploadId = "IdFile",
                   KeyId = ViewBag.Id,
                   Type = 0,
                   UploadContentType = "",
                   ServerUrl = "File/UploadFile?parameter=1200,200",
               })
                </div>
                <div class="form-group">
                    <label>封面图片(移动端)(1600*680)</label><span class="text-danger">*</span>
                    @Html.Partial("UploadFilePartialView", new UploadFileDto()
               {
                   UploadId = "IdFile1",
                   KeyId = ViewBag.Id,
                   Type = 1,
                   UploadContentType = "",
                   ServerUrl = "File/UploadFile?parameter=1600,680",
               })
                </div>

            </div>
            <div class="box-footer col-xs-12">
                <button type="submit" class="btn btn-primary" id="sumbit">保存</button>
            </div>
        </div>
    </form>
</div>
<script src="~/Views/SlideSetting/AddOrEdit.js"></script>
