@{
    ViewBag.Title = "备考信息";
}

<div class="box">
    <form id="sumbitForm" name="sumbitForm">
        <div class="box-body">
            <input type="hidden" Id="Id" name="Id" value="@ViewBag.Id" />
            <div class="col-xs-12">
                <div class="form-group">
                    <label>考试介绍</label><span class="text-danger">*</span>
                    <input type="text" class="form-control" id="Description" name="Description">
                </div>
                <div class="form-group">
                    <label>考试报名</label>
                    <input type="text" class="form-control" id="SignUp" name="SignUp">
                </div>
                <div class="form-group">
                    <label>考试内容</label>
                    <input type="text" class="form-control" id="Content" name="Content">
                </div>
                <div class="form-group">
                    <label>成绩管理</label>
                    <input type="text" class="form-control"  id="ScoreManage" name="ScoreManage" />
                </div>
                <div class="form-group">
                    <label>考试教材</label>
                    <input type="text" class="form-control" id="TextBox" name="TextBox" />
                </div>
                <div class="form-group">
                    <label>考试开始时间</label>
                    <input class="form-control Wdate" onFocus="WdatePicker({ el: 'BeginTime', dateFmt: 'yyyy-MM-dd', maxDate: '#F{$dp.$D(\'EndTime\')}' })" id="BeginTime" name="BeginTime" style="height: 34px; width: 179px;" />
                </div>
                <div class="form-group">
                    <label>考试结束时间</label>
                    <input class="form-control Wdate" onFocus="WdatePicker({ el: 'EndTime', dateFmt: 'yyyy-MM-dd', minDate: '#F{$dp.$D(\'BeginTime\')}' })" id="EndTime" name="EndTime" style="height: 34px; width: 179px;" />
                </div>
                <div class="form-group">
                    <label>是否启用</label>
                    <input type="radio" value="0" name="IfUse" />否
                    <input type="radio" value="1" checked="checked" name="IfUse" />是
                </div>
            </div>
            <div class="box-footer col-xs-12">
                <button type="submit" class="btn btn-primary" id="sumbit">保存</button>
            </div>
        </div>
    </form>
</div>
<script src="~/Libs/My97DatePicker/WdatePicker.js"></script>
<script src="~/Views/ExamInfo/AddOrEdit.js"></script>