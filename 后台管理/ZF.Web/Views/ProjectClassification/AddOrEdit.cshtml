
@{
    ViewBag.Title = "项目分类新增(修改)";
}

<div class="box">
    <form id="sumbitForm" name="sumbitForm">
        <div class="box-body">
            <input type="hidden" Id="Id" name="Id" value="@ViewBag.Id" />
            <div class="col-xs-12">
                <div class="form-group">
                    <label>项目分类名称</label><span class="text-danger">*</span>
                    <input type="text" class="form-control" id="ProjectClassName" name="ProjectClassName">
                </div>
                <div class="form-group">
                    <label>排序号</label><span class="text-danger">*</span>
                    <input type="number" class="form-control" min="0" max="100" id="OrderNo" name="OrderNo">
                </div>
                <div class="form-group">
                    <label>分类说明</label>
                    <textarea type="text" class="form-control" style="height: 60px;" id="Remark" name="Remark"></textarea>
                </div>
            </div>
            <div class="box-footer col-xs-12">
                <button type="submit" class="btn btn-primary" id="sumbit">保存</button>
            </div>
        </div>
    </form>
</div>
<script src="~/Views/ProjectClassification/AddOrEdit.js"></script>
