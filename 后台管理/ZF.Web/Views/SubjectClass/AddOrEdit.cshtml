
@{
    ViewBag.Title = "试题分类新增or(修改)";
}

<div class="box">
    <form id="sumbitForm" name="sumbitForm">
        <div class="box-body">
            <input type="hidden" Id="Id" name="Id" value="@ViewBag.Id" />
            <div class="col-xs-12">
                <div class="form-group">
                    <label>题型名称</label><span class="text-danger">*</span>
                    <input type="text" class="form-control" id="ClassName" name="ClassName">
                </div>
                <div class="form-group">
                    <label>题型所属项目</label><span class="text-danger">*</span>
                    <select type="text" class="form-control" id="ProjectId" name="ProjectId"></select>
                </div>
                <div class="form-group">
                    <label>试题表现形式</label><span class="text-danger">*</span>
                    <select type="text" class="form-control" id="BigType" name="BigType"></select>
                </div>
                <div class="form-group">
                    <label>排序号</label><span class="text-danger">*</span>
                    <input type="number" class="form-control" id="OrderNo" name="OrderNo" min="0" max="99">
                </div>
                <div class="form-group">
                    <label>题型描述</label>
                    <textarea type="text" class="form-control" style="height: 60px;" id="Remark" name="Remark"></textarea>
                </div>
            </div>
            <div class="box-footer col-xs-12">
                <button type="submit" class="btn btn-primary" id="sumbit">保存</button>
            </div>
        </div>
    </form>
</div>
<script src="~/Views/SubjectClass/AddOrEdit.js"></script>
