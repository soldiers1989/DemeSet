
<div class="col-xs-12">
    <div class="box-header nav-header">
        <span class="title"><i class="fa fa-map-marker map-loc"></i>位置：<a>课程管理</a>/<a>课程内容管理</a></span>
    </div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="box-body">
            <input hidden="hidden" Id="QueryCourseId" value="@ViewBag.Id" />
            <div class="col-xs-4">
                <div class="form-group">
                    <label>课程名称</label>
                    <input type="text" readonly="readonly" class="form-control" value="@ViewBag.CourseName" name="CourseName">
                </div>
            </div>
            <div class="col-xs-4">
                <div class="form-group">
                    <label>课程所属科目</label>
                    <input type="text" readonly="readonly" class="form-control" value="@ViewBag.SubjectName"  name="SubjectName">
                </div>
            </div>
            <div class="col-xs-4">
                <div class="form-group">
                    <label>主讲教师</label>
                    <input type="text" readonly="readonly" class="form-control" value="@ViewBag.TeachersName" id="TeachersName" name="TeachersName">
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="tabbable" id="tabs-131303">
                <ul class="nav nav-tabs">
                    <li>
                        <a href="#panel-432492" data-toggle="tab" id="resList">课程资源</a>
                    </li>
                    <li class="active">
                        <a href="#panel-779412" data-toggle="tab">课程章节</a>
                    </li>
                </ul>
            </div>
            <div class="tab-content">
                <div class="tab-pane active" id="panel-432492">
                    @*课程资源列表*@
                    <div class="col-xs-12">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        资源名称
                                    </th>
                                    <th>
                                        资源大小
                                    </th>
                                    <th>
                                        资源url
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="resourseList">

                            </tbody>
                        </table>
                        <div class="box-footer col-xs-12">
                            <button  class="btn btn-primary" style="float:right;" id="addResource" >添加</button>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="panel-779412">
                    <div class="col-xs-6">
                        @* 加载课程下章节树 *@
                        <div >章节列表：</div>
                        <div class="col-xs-12" style="border:1px;height:400px;">
                            <ul id="chapterTree" class="ztree"></ul>
                        </div>
                        <div class="box-footer col-xs-12">
                            <button class="btn btn-primary" style="float:right;" id="addChapter">新增课程章节</button>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        @* 课程章节视频列表 *@
                        <div class="col-xs-12">视频列表：</div>
                        <div class="col-xs-12" id="videoList" style="border:1px;height:400px;">
                        </div>
                        <div class="box-footer col-xs-12">
                            <button class="btn btn-primary" style="float:right;" id="addVideo">添加课程视频</button>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>





