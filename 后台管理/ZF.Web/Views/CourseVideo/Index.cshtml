
@{
    Layout = null;
}
<style>
    .list_title {
        font-weight: bold;
        font-size: 18px;
    }
</style>

<input hidden="hidden" id="CourseIdParam" value="@ViewBag.CourseId" />
<input hidden="hidden" id="ChapterIdParam" />
<div class="col-xs-12" style="height:500px;border:1px;border-style:dotted;overflow:scroll;">

    @* 加载课程下章节树 *@
    <div class="list_title">章节列表：</div>
    <div class="col-xs-6">
        <ul id="videoChapterTree" class="ztree"></ul>
    </div>
    @* 章节列表对应视频资源 *@
    <div class="list_title" style="margin-top: -22px;">视频列表：</div>
    <div class="col-xs-6" style="border: 1px;">
        <ul id="videoList"></ul>
    </div>

</div>
<div class="col-xs-12" style="padding-top: 5px; border: 1px;">
    <button class="btn btn-primary add_btn" style="float:right;" disabled="disabled" id="UpdateVideoTasteLongTime">批量修改可试听时长</button>&nbsp;
    <button class="btn btn-primary add_btn" style="float: right;margin-right: 10px;" disabled="disabled" id="addVideo">添加</button>&nbsp;
    @*<input class="btn btn-danger del_btn" style="float:right;margin-right: 20px;" type="button" id="delVideo" value="删除">&nbsp;*@
</div>
<script src="~/Views/CourseVideo/Index.js"></script>