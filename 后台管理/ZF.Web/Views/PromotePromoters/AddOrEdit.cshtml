
@{
    ViewBag.Title = "推广员新增(修改)";
}

<div class="box">
    <form id="sumbitForm" name="sumbitForm">
        <div class="box-body">
            <input type="hidden" Id="Id" name="Id" value="@ViewBag.Id" />
            <div class="col-xs-12">
                <div class="form-group">
                    <label>推广员姓名</label><span class="text-danger">*</span>
                    <input type="text" class="form-control" id="Name" name="Name">
                </div>
                <div class="form-group">
                    <label>所属公司</label><span class="text-danger">*</span>
                    <select type="text" class="form-control" id="CompanyId" name="CompanyId"></select>
                </div>
                <div class="form-group">
                    <label>联系方式</label><span class="text-danger">*</span>
                    <input type="text" class="form-control" id="Contact" name="Contact">
                </div>
            </div>
            <div class="box-footer col-xs-12">
                <button type="submit" class="btn btn-primary" id="sumbit">保存</button>
            </div>
        </div>
    </form>
</div>
<script src="~/Views/PromotePromoters/AddOrEdit.js"></script>
