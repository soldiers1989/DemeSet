
@{
    Layout = null;
}

<div class="col-xs-12">
    <div class="box-header nav-header">
        <span class="title"><i class="fa fa-map-marker map-loc"></i>位置：<a>网站配置</a>/<a>@ViewBag.Name</a></span>
    </div>
</div>
<div class="col-xs-12" style="background-color: #000000; height: 3px;"></div>
<div class="col-xs-12">
    <form id="sumbitForm" name="sumbitForm">
        <div class="box-body">
            <div class="form-group col-xs-12">
                <input id="Code" name="Code" type="hidden" value="@ViewBag.Code"/>
                <input id="Name" name="Name" type="hidden"  value="@ViewBag.Name" />
                <label>详情：</label>
                <script id="Content" name="Content" type="text/plain">
                </script>
            </div>
            <div class="box-footer col-xs-12">
                <button  class="btn btn-primary" id="sumbit">保存</button>
            </div>
        </div>
    </form>
</div>
<script src="~/Libs/ueditor/ueditor.configAll.js"></script>
<script src="~/Libs/ueditor/ueditor.all.js"></script>
