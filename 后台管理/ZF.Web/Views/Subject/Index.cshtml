@{
    ViewBag.Title = "Index";
    Layout = null;
}
<style>
    #selectFrom .form-control {
        min-width: 179px;
    }
</style>
<link href="~/Views/Subject/Index.css" rel="stylesheet" />
<div class="col-xs-12">
    <div class="box-header nav-header">
        <span class="title"><i class="fa fa-map-marker map-loc"></i>位置：<a>课程管理</a>/<a>科目管理</a></span>
    </div>
</div>
<div class="col-xs-12" style="background-color: #000000; height: 3px;"></div>
<div class="col-xs-12">
    <!-- 工具栏 -->
    <div class="content-header form-inline row">
        <form id="selectFrom" name="selectFrom">
            <div class="form-group">
                <input class="btn btn-success add_btn" type="button" value="添加">&nbsp;
                <input class="btn btn-info edit_btn" type="button" value="编辑">&nbsp;
                <input class="btn btn-danger del_btn" type="button" value="删除">&nbsp;
            </div>
            <div class="form-group">
                <label>科目名称：</label>
                <input id="QuerySubjectName" Name="SubjectName" class="form-control"/>
                <label>所属项目分类</label>
                <select class="form-control" id="QueryProjectClassId" name="ProjectClassId"></select>
                <label>所属项目</label>
                <select class="form-control" id="QueryProjecttId" name="ProjectId">
                    <option value="">--全部--</option>
                </select>
                <input class="btn btn-success query_btn" type="button" value="查询">
            </div>
        </form>
    </div>
    <div class="box-body row">
        <table id="tblData"></table>
        <div id="pager"></div>
    </div>
</div>
<script src="~/Views/Subject/Index.js"></script>