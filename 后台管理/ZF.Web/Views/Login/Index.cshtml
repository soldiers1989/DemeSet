
@{
    ViewBag.Title = "登录";
    Layout = null;
}
<link href="@Url.Content("~/Libs/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/font-awesome.min.css")" rel="stylesheet" type="text/css" />
<link href="~/Views/Login/Index.css" rel="stylesheet" />
<div class="container" style="margin-top: 10%;">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form class="form-horizontal">
                <span class="heading">用户登录</span>
                <input type="text" name="LoginType" hidden="hidden" />
                <div class="form-group">
                    <input type="email" class="form-control" id="LoginName" name="LoginName" placeholder="登录名">
                    <i class="fa fa-user"></i>
                </div>
                <div class="form-group help">
                    <input type="password" class="form-control" id="PassWord" name="PassWord" placeholder="密码">
                    <i class="fa fa-lock"></i>
                </div>
                <div class="form-group">
                    <div class="main-checkbox">
                        <input type="checkbox" value="1" id="checkbox1" name="check" />
                        <label for="checkbox1"></label>
                    </div>
                    <span class="text">记住我</span>
                    <button type="button" id="Sumbit" class="btn btn-default">立刻登录</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Libs/plugins/jQuery/jquery-2.2.3.min.js")"></script>
<script src="@Url.Content("~/Js/layout.js")"></script>
<script src="@Url.Content("~/Libs/layer/js/layer.js")"></script>
<script src="@Url.Content("~/Js/easyuiBase.js")"></script>
<script src="@Url.Content("~/Libs/md5.js")"></script>
<script src="@Url.Content("~/Views/Login/Index.js")"></script>
