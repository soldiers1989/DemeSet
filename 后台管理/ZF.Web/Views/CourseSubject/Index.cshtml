
@{
    ViewBag.Title = "课程试题管理";
    Layout = null;
}
<style>
    #selectExistQuestionFrom label {
        min-width: 90px;
    }
</style>
<div class="col-xs-12">
    <div class="box-header nav-header">
        @*<span class="title"><i class="fa fa-map-marker map-loc"></i>位置：<a>课程管理</a>/<a>课程试题管理</a></span>*@
        <span class="glyphicon glyphicon-arrow-left" style="color:green;cursor:pointer;" id="return_btn">返回</span>
    </div>
</div>
<div class="col-xs-12" style="background-color: #000000; height: 3px;"></div>
<div class="col-xs-2" style="border-left-style:  solid;border-right-style:solid; border-width: 1px;height:700px;overflow-y:auto;">
    <div>
        <form id="selectFrom" name="selectFrom">
            <input id="subjectIdList" hidden="hidden" />
            <input id="courseId" hidden="hidden" value="@ViewBag.CourseId"/>
            <input id="subjectId" hidden="hidden" value="@ViewBag.SubjectId"/>
            <input id="projectId" hidden="hidden" value="@ViewBag.ProjectId" />
            @*<div class="col-xs-12">
                <div class="form-group">
                    <label>所属项目：</label>
                    <select id="QueryProjectId" Name="ProjectId" class="form-control" />
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <label>所属科目：</label>
                    <select id="QuerySubjectId" class="form-control">
                        <option value="">请选择所属科目</option>
                    </select>
                </div>
            </div>*@
            <div class="col-xs-12">
                <div class="form-group">
                    <label>课程名称:</label>
                    <span id="courseName">@ViewBag.CourseName</span>
                    @*<select class="form-control" id="QueryCourseId" name="Id">
                        <option value="">请选择课程</option>
                    </select>*@
                </div>
            </div>
            <div class="col-xs-12">
                <label>章节列表:</label>
                <ul id="courseChapterTree" class="ztree"></ul>
            </div>
        </form>
    </div>
</div>
<div class="col-xs-10">
    <div class="col-xs-12" id="existSubject">
        <div>课程已选试题:</div>
        <div class="content-header form-inline row">
            <form id="selectExistQuestionFrom" name="selectFrom">
                <div class="form-group col-xs-12">
                    <label>所属知识点:</label>
                    <input type="hidden" class="form-control" value="" id="knowledgePointIds" name="KnowledgePoint_Id">
                    <input type="text" id="ParentId" class="form-control" value="" onclick="showMenu(); return false;">
                    <div id="menuContent" class="menuContent" style="display: none; position: absolute; z-index: 9999999; background-color: #fff;margin-left: 93px; width: 174px; border-style:  solid; border-width: 1px;">
                        <ul id="treeDemo" class="ztree"></ul>
                    </div>
                    <label>试题分类：</label>
                    <select id="QuerySubjectClassId" name="SubjectClass_Id" value="" style="width: 179px;" class="form-control"></select>
                    <label>当前操作章节节点：</label><span style="color:red;" id="chapterName"></span>
                </div>
                <div class="form-group col-xs-12" style="margin-top: 5px;">
                    <label>试题标题：</label>
                    <input id="QueryQuestionTitle" name="QuestionTitle" value="" style="width:173px;" class="form-control" />
                    <input hidden="hidden" id="QueryChapterId" name="Chapter_Id" />
                    <input hidden="hidden" id="QueryParentChapterId" name="ParentId"/>
                    <label>试题类型：</label>
                    <select id="QuerySubjectType" name="Subject_Type" value="" style="width:179px;" class="form-control"></select>
                    <input class="btn btn-info query_btn" type="button" value="查询">
                    <input class="btn btn-danger remove_btn" type="button" value="删除">
                    <input class="btn btn-success add_btn" type="button" value="添加试题">&nbsp;
                </div>
            </form>
        </div>
        <hr />
        <div class="box-body row">
            <table id="selectedQuestionData"></table>
            <div id="pager1"></div>
        </div>
    </div>
</div>
<script src="~/Views/CourseSubject/Index.js"></script>
