
@{
    Layout = null;
}

<style>
    .neirong {
        width: 100%;
        height: 30px;
        line-height: 30px;
        background: #fafafa;
        margin: 5px;
    }

        .neirong span {
            width: 200px;
            margin-left: 15px;
        }

    .bitaoti {
        width: 20%;
        float: left;
    }

    .jc {
        font-weight: bold;
    }
</style>

<div id="PopularCourses">
</div>
<input type="hidden" Id="paperId" name="paperId" value="@ViewBag.PaperId" />
<script id="PopularCourses_html" type="text/html">
    <div style="padding: 10px;">
        <div class="neirong">
            <div class="bitaoti jc">
                <span>试卷练习序号</span>
            </div>
            <div class="bitaoti jc">
                <span>试卷总分</span>
            </div>
            <div class="bitaoti jc">
                <span>得分</span>
            </div>
            <div class="bitaoti jc">
                <span>练习排名</span>
            </div>
            <div class="bitaoti jc">
                <span>练习时间</span>
            </div>
        </div>
        {{each Result}}
        <div class="neirong">
            <div class="bitaoti">
                <span><a href="/Answer/IndexView?PaperId={{$value.PaperId}}&PaperRecordsId={{$value.Id}}" target="_blank">{{$value.PracticeNo}}</a></span>
            </div>
            <div class="bitaoti">
                <span>{{$value.ScoreSum}}</span>
            </div>
            <div class="bitaoti">
                <span>{{$value.Score}}</span>
            </div>
            <div class="bitaoti">
                <span>{{$value.RowNumber}}</span>
            </div>
            <div class="bitaoti">
                <span>{{$value.AddTime}}</span>
            </div>
        </div>
        {{/each}}
    </div>
</script>
<script type="text/javascript">
    var paperId = $("#paperId").val();
    //初始化
    topevery.ajax({
        url: "api/CourseAppraise/GetMyPaperRecords?paperId=" + paperId,
        type: "Post",
        data: JSON.stringify({})
    }, function (data) {
        if (data.Success) {
            $("#PopularCourses").html(template("PopularCourses_html", data));
        }
    });
</script>