@* 已收藏试题 *@
<input type="hidden" Id="ChapterQuestionsId" value="@ViewBag.ChapterQuestionsId" />
<div id="j-cp-box-item" class= "g-flow" style="margin-top: 22px;">
    @*<div class="subject-title">我的收藏试题</div>*@
    <div id="questionModule" class="cross-range">
        <div id="page-con">
            <ul class="page-body" id="subjectlist" ></ul>
            <script type="text/html" id="PracticeView_html">
                <div class="ud-main clearfix">
                    @*<h2 class="ud-title">不知道干嘛用，没有内容白占空间先注释
                        <input type="hidden" id="ChapterId" value="{{ChapterId}}"/>
                        <input class="editor_titles" type="text" value="" placeholder="">
                        /*<span class="editor_titles" Id="ChapterTiele">{{ChapterTiele}}{{PracticeNo}}</span>*/
                        <a class="ud-edtior" href="javascript:void(0);"></a>
                    </h2>*@
                    <div class="ud-info">
                        <span>练习时间：</span>
                        <b id="DateTime">{{DateTime}}</b>
                        <span>课程名称：</span>
                        <b value="51" id="CourseName">{{CourseName}}</b>
                        <span>名称：</span>
                        <b value="22" id="ChapterName">{{ChapterName}}</b>
                        <span>题数：</span>
                        <b id="Count">{{Count}}</b>
                        <a id="ud-keep-paper" style="float: right;" href="javascript:savePaper();">重新练习</a>
                    </div>
                </div>
                {{each ChapterQuestionsDetailOutput}}
                <li style="display: block;">
                    <div class="subject-con bor clearfix m-question disabled" style="">
                        <div class="subject-con" style="background: inherit">
                            <div class="sub-content sub-conanswer">
                                <div class="sub-dotitle" style="display: inline-block;">
                                    {{#$value.Description}}
                                </div>
                                <div class="sub-dotitle">
                                    <em>{{$index+1}}、<i>{{$value.SubjectName}}</i></em>
                                    {{#$value.QuestionContent}}
                                    @*<p>关于道德的说法中，正确的是（ ）</p>*@
                                </div>
                                <dl class="sub-answer  sub-answer-no">
                                    {{each $value.option}}
                                    <dd class="m-question-option cho-this" data-value="A">
                                        <i></i>
                                        {{#$value.content}}
                                        @*<p>
                                                <span>A.</span>纵观历史，人类道德几乎没有发生变化
                                            </p>*@
                                    </dd>
                                    {{/each}}
                                </dl>
                            </div>
                            <div class="sub-dotitle" style="position: relative; display: block; display: inline-block; float: right;">
                                <label>{{#$value.Whether}}</label>
                            </div>
                        </div>
                        <div class="m__answerLine refer-answer clearfix" data-examid="4127629" style="display: block;">
                            <div class="reck">
                                参考答案：<em class="right">{{$value.RightAnswer}}</em>
                                您的答案：<em class="wrong">{{$value.StuAnswer}}</em>
                            </div>
                            <ul>
                                <li class="nobro">
                                    {{if $value.IsCollection===0 }}
                                    <a href="javascript:void(0)" data-id="{{$value.QuestionId}}" class="btn__scbt scbt that  shoucan" data="0">
                                        <i></i>收藏
                                    </a>
                                    {{else}}
                                    <a href="javascript:void(0)" data-id="{{$value.CollectionId}}" class="btn__scbt scbt this shoucan" data="1">
                                        <i></i>取消收藏
                                    </a>
                                    {{/if}}
                                </li>
                                @*<li><a href="javascript:;" class="btn__jc jc"><i></i>纠错</a></li>*@
                                <li>
                                    <a href="javascript:;" class="btn__zkjx zkjx"><i></i>展开解析</a>
                                    <a href="javascript:;" class="btn__sqjx sqjx" style="display: none;"><i></i>收起解析</a>
                                </li>
                            </ul>
                        </div>
                        <div class="m__analyse detail-intro" style="display: none;">
                            <div class="solution">
                                <ul>
                                    <li class="da-list">
                                        <span class="s-jx"><i></i>参考解析：</span>
                                        <div class="so-timu">
                                            <div class="wenzi">
                                                {{if $value.QuestionTextAnalysis}}
                                                {{#$value.QuestionTextAnalysis}}
                                                {{else}}
                                                暂无
                                                {{/if}}
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        </div>
                </li>
                {{/each}}
            </script>
        </div>
    </div>
</div>
