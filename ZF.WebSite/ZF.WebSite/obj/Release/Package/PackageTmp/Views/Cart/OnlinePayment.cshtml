    .AliButton {
        border: 1px solid #999;
        width: 30%;
        height: 30px;
        text-align: center;
        border-radius: 3px;
        line-height: 25px;
        align-content: center;
        margin: 0 auto;
    }

     .codeArea {
        width: 210px;
        height: 260px;
        margin: 0 auto;
    }

    .codeimg {
        width: 210px;
        height: 210px;
    }

    .tipsimg {
        margin-left: 36px;
        margin-right: 10px;
        margin-top: 4px;
    }

    .ctips {
        font-size: 12px;
        line-height: 18px;
        color: #666666;
        text-align: left;
