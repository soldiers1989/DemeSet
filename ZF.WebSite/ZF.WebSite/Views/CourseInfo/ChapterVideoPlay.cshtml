                                @*<span class="u-clicon ksicon ksicon-0" title="未开始"></span>*@
                            </span>
                            <span class="f-fl ksname">{{$value.CapterName}}</span>
                            <span class="f-fr ksinfo">
                                <span class="f-fr ksinfoicon ksinfoicon-3" title="文本"></span>
                                <span class="f-fr flag flag-10" title=""></span>
                            </span>
                            <span class="f-fr ksinfo">
                                <span class="f-fr ksinfoicon ksinfoicon-2" title="视频"></span>
                                {{if $value.VideoUrl}}
                                <span class="f-fr kstime">{{$value.VideoLongTime}}</span>
                                {{else}}
                                {{ if $value.SubChapterList}}
                                {{else}}
                                <span class="f-fr kstime">暂未上线..</span>
                                {{/if}}
                                {{/if}}
                                <span class="f-fr flag flag-10" title=""></span>
                            </span>
                        </div>


                        {{each $value.SubChapterList}}
                        {{if $value.IsExercise == 0}}
                        <div class="section {{$value.VideoId}} rowIndex_{{$value.RowsIndex}}" RowsIndex="{{$value.RowsIndex}}" id="{{$value.VideoId}}" VideoUrl="{{$value.VideoUrl}}" title="{{$value.CapterName}}" chapterId="{{$value.Id}}" ChapterName="{{$value.CapterName}}" VideoId="{{$value.VideoId}}" data-lesson="0">
                            <span class="f-fl  ks" style="color: rgb(153, 153, 153); width:25px;">&nbsp;</span>
                            <span class="f-fl ksw">
                                <span class="u-clicon ksicon ksicon-0" title="未开始"></span>
                            </span>
                            <span class="f-fl ksname" style="color: rgb(153, 153, 153);">{{$value.CapterName}}</span>
                            <span class="f-fr ksinfo">
                                <span class="f-fr ksinfoicon ksinfoicon-3" title="文本"></span>
                                <span class="f-fr flag flag-10" title=""></span>
                            </span>
                            <span class="f-fr ksinfo">
                                <span class="f-fr ksinfoicon ksinfoicon-2" title="视频"></span>
                                {{if $value.VideoUrl}}
                                <span class="f-fr kstime">{{$value.VideoLongTime}}</span>
                                {{else}}
                                <span class="f-fr kstime">暂未上线..</span>
                                {{/if}}
                                <span class="f-fr flag flag-10" title=""></span>
                            </span>
                        </div>
                        {{/if}}
                        {{/each}}
                        {{/if}}
                        {{/each}}
