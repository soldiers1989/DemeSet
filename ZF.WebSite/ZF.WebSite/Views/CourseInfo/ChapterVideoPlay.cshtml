<style>
    .vjs-paused .vjs-big-play-button,
    .vjs-paused.vjs-has-started .vjs-big-play-button {
        display: block;
    }

    .video-js .vjs-big-play-button {
        font-size: 2.5em;
        line-height: 2.3em;
        height: 2.5em;
        width: 2.5em;
        -webkit-border-radius: 2.5em;
        -moz-border-radius: 2.5em;
        border-radius: 2.5em;
        background-color: #73859f;
        background-color: rgba(115, 133, 159, .5);
        border-width: 0.15em;
        margin-top: 11.75em;
        margin-left: 32.25em;
    }
    /* 中间的播放箭头 */
    .vjs-big-play-button .vjs-icon-placeholder {
        font-size: 1.63em;
    }

    .prism-big-play-btn {
        left: 48% !important;
        bottom: 48% !important;
    }
    /* 加载圆圈 */
    .vjs-loading-spinner {
        font-size: 2.5em;
        width: 2em;
        height: 2em;
        border-radius: 1em;
        margin-top: -1em;
        margin-left: -1.5em;
    }

    #j-coursebox {
        margin-right: 300px;
    }

    #auto-id-1526901104201 {
        height: 100%;
    }

    .personCenter:hover .drop {
        display: block;
    }

    .current {
        background: #1d1d1d;
    }

    .hidetips {
        display: none;
    }
    /*.coursebox, .course-learn, .m-courselearn {
        min-height: 400px !important;
    }*/
</style>
