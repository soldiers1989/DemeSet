<script src="@HttpContext.Current.Application["DefuleDomain"]/Js/md5.js?v=1.0"></script>
<div id="alpqy">

</div>
<script type="text/javascript">
    $(function () {
        //订单编号
        var obj = new Object();
        //订单编号
        obj.OrderNo = topevery.getUrlParam("OrderNo");
        //取得支付宝平台地址
        topevery.ajax({
            url: "api/AliPay/GetAliPayUrl",
            data: JSON.stringify(obj)
        }, function (data) {
            $("#alyPlay").append(data.Result.response.Body)
            var bdhtml = "<div id=\"alyPlay\" style=\"display:none\">" + data.Result.response.Body + "</div>";
            $("#alpqy").html(bdhtml);
            //document.write(bdhtml);
        });
    })


</script>
