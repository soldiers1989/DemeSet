                        </div>
                        <div class="addr-switch switch-on hide" id="consigneeItemAllClick" onclick="show_ConsigneeAll()">
                            <span>更多地址</span><b></b>
                        </div>
                        <input type="hidden" id="consigneeList_giftSenderConsigneeMobile" value="">
                        <input type="hidden" id="consigneeList_giftSenderConsigneeName" value="">
                    </div>

                    <script type="text/html" id="path_html">
                        {{if length>0}}
                        {{each}}
                        <li class="ui-switchable-panel ui-switchable-panel-selected" style="display: list-item;" id="consignee_index_138641522" selected="selected" c_li_custom_label="consignee_li">
                            {{if $value.DefaultAddress===1}}
                            <div class="consignee-item item-selected" name="{{$value.Id}}" onclick="enditiClass(this)" id="consignee_index_div_138641522">
                                <span limit="8" title="{{$value.Contact}}">{{$value.Contact}}</span><b></b>
                            </div>
                            {{else}}
                            <div class="consignee-item" onclick="enditiClass(this)" name="{{$value.Id}}" id="consignee_index_div_138641522" consigneetype="0">
                                <span limit="8" title="{{$value.Contact}}">{{$value.Contact}}</span><b></b>
                            </div>
                            {{/if}}
                            <div class="addr-detail">
                                <span class="addr-name" limit="6" title="{{$value.Contact}}">{{$value.Contact}}</span>
                                <span class="addr-info" limit="45" title="{{$value.Province}} {{$value.City}} {{$value.Town}} {{$value.DetailedAddress}}">{{$value.Province}} {{$value.City}} {{$value.Town}} {{$value.DetailedAddress}}</span>
                                <span class="addr-tel">{{$value.ContactPhone}}</span>
                                {{if $value.DefaultAddress===1}}
                                <span class="addr-default">默认地址</span>
                                {{/if}}
                            </div>
                            <div class="op-btns" consigneeid="138641522" isoldaddress="false">
                                {{if $value.DefaultAddress===0}}
                                <a href="#none" name="{{$value.Id}}" onclick="makeAddressAllDefaultByoverseas(this)" class="ftx-05 edit-consignee" fid="138641522" clstag="pageclick|keycount|trade_201602181|6">设置为默认地址</a>
                                {{/if}}
                                <a href="#none" class="ftx-05 edit-consignee" fid="138641522" name="{{$value.Id}}" onclick="alertUpdateAddressDiagByoverseas(this);" clstag="pageclick|keycount|trade_201602181|6">编辑</a>
                                <a href="#none" onclick="alertDelAddressDiag(this);" id="{{$value.Id}}" class="ftx-05 del-consignee" fid="138641522" clstag="pageclick|keycount|trade_201602181|5">删除</a>
                            </div>
                        </li>
                        {{/each}}
                        {{else}}
                        <li class="ui-switchable-panel ui-switchable-panel-selected" style="display: list-item;" id="consignee_index_138641522" selected="selected" c_li_custom_label="consignee_li">
                            暂无收货地址
                        </li>
                        {{/if}}
                    </script>
                </div>
            </div>
