                        <tbody id="datas"></tbody>

                    </table>
                    <script id="datainfo" type="text/html">
                        {{each Result}}
                        <tr name="{{$value.Id}}">
                            <td></td>
                            <td>{{$value.CourseName}}</td>
                            <td>{{$value.FavourablePrice}}</td>
                            <td>{{$value.Num}}</td>

                            <td>
                                {{$value.ValidityEndDate}}
                            </td>
                            @*{{if $value.ValidityPeriod===0}}
                                <td>永久有效</td>
                                {{else}}
                                <td>{{$value.ValidityPeriod}}</td>
                                {{/if}}*@

                            <td>{{$value.Amount}}</td>
                        </tr>
                        {{/each}}
                    </script>

                </div>
            </div>
            <div style="height:20px;"></div>

            <!--<div style="height:20px;"></div>-->
            <div id="handoutIsShow" style="display:none;">
                <p>
                    <label><input type="checkbox" class="invoice" id="inDiag" name="name" value="" style="margin:10px;" checked="checked" />邮寄讲义</label><!--选中显示下面的发票-->
                </p>

                <span id="pathval" class="span tips">
                </span>
                <div class="checkout-steps" id="pathshow">
                    <div class="step-tit">
                        <h3>收件人信息</h3>
                        <div class="extra-r">
                            <a href="#none" class="ftx-05 J_consignee_global" onclick="alertAddAddressDiag()">新增收件地址</a>
                            <input type="hidden" id="del_consignee_type" value="0">
                        </div>
                    </div>
                    <div class="step-cont" id="overflowShow">
                        <div id="consignee-addr" class="consignee-content">
