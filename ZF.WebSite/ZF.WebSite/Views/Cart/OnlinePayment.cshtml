
@{
    ViewBag.Title = "OnlinePayment";
    Layout = null;
}
<link href="@HttpContext.Current.Application["DefuleDomain"]/Views/Cart/css/public.css" rel="stylesheet" />
<link href="@HttpContext.Current.Application["DefuleDomain"]/Views/Cart/css/buyConfirm.css" rel="stylesheet" />
<link href="@HttpContext.Current.Application["DefuleDomain"]/Libs/zui/css/zui.lite.css" rel="stylesheet" />
<link href="@HttpContext.Current.Application["DefuleDomain"]/Views/Cart/css/SubmitOrderStyle.css" rel="stylesheet" />
<link href="@HttpContext.Current.Application["DefuleDomain"]/Libs/CourseInfo/css/core.css" rel="stylesheet" />
<div class="container">
    <div class="col-md-10 col-md-offset-1">
        @*<input type="hidden" Id="userIp" name="userIp" value="@ViewBag.userIp" />*@

        <div class="form-group has-feedback">
            <label style="font-weight:normal;">订单号：</label><span id="SheetNO"></span>
        </div>
        <div class="form-group has-feedback">
            <label style="font-weight:normal;">应付金额：</label><span id="price"></span>
        </div>
        <div class="form-group has-feedback">
            <label style="font-weight:normal;">支付方式：</label><span id="payType"></span>
        </div>
    </div>
</div>
<div id="PayHtml" style="text-align: center;line-height: 25px;">

</div>

<script id="orderList_html" type="text/html">
    {{if PayType==0}}
    <div class="form-group AliButton">
        <a target="_blank" href="javascript:aliPayment()" id="aliPay"><span class="f-cb go-pay" id="auto-id-1523411859886" style="color:black">去付款</span></a>
        <a href="../LearningCenter/Index" id="IsPay" style="display:none;" ><span class="f-cb go-pay" id="auto-id-1523411859886" style="color:black">支付完成</span></a>

    </div>
    {{else}}
    <div class="codeArea">
        <img src="{{TwoCode}}" alt="微信支付二维码" class="codeimg">
        <div  style="margin-top:10px;">
            <img src="../Images/CartImg/wxsmall.png" alt="" class="f-fl tipsimg">
            <div class="ctips f-fl">使用微信扫描二维码完成支付<br>支付完成后点击[支付成功]</div>
        </div>
    </div>
    {{/if}}
</script>
<input type="hidden" Id="OrderNo" name="OrderNo" value="@ViewBag.OrderNo" />
<input type="hidden" Id="OrderAmount" name="OrderAmount" value="@ViewBag.OrderAmount" />
<input type="hidden" Id="OrderType" name="OrderType" value="@ViewBag.OrderType"/>
<input type="hidden" Id="CardNo" name="CardNo" value="@ViewBag.CardNo" />
<script src="http://code.jquery.com/jquery-2.2.3.min.js?v=1.0"></script>
<script src="@HttpContext.Current.Application["DefuleDomain"]/Images/Home/js/ajax.js" type="text/javascript"></script>
