<script>
    function submitChecker() {
        var content = $('#textarea').val();
        topevery.ajaxwx({
            url: 'api/QuestionChecker/Add',
            data: JSON.stringify({Content:content})
        }, function (data) {
            if (data.Success) {
                layer.msg('提交成功');
                setTimeout(function () {
                    location.href = "/jjs/MyErrorSubject/Index";
                },2000);
            }
        });
    }
</script>
