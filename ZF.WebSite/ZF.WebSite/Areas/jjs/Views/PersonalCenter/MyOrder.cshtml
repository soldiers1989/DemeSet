
@{
    Layout = "~/Areas/jjs/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="telephone=no" name="format-detection">
    <meta content="email=no" name="format-detection">
    <meta http-equiv="Cache-Control" CONTENT="no-cache">
    <meta http-equiv="pragram" content="no-cache">
    <link href="@HttpContext.Current.Application["DefuleDomain"]/Areas/jjs/resources/style/user.css" rel="stylesheet" type="text/css">
    <title>我的订单_未支付</title>
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
        }

        .zanwu {
            width: 80%;
            margin: auto;
            text-align: center;
            padding-top: 8em;
        }

            .zanwu img {
                width: 50%;
            }

            .zanwu p {
                font-size: 1.2em;
            }
    </style>
</head>
<body class="body">
    <input type="hidden" id="openid" value="@ViewBag.openid" />
    <div class="wdzf-nav">
        <ul class="j-order-status">
            <li><a href="#" class="hover" id="pendingPayment" name="1">未支付</a></li>
            <li><a href="#" id="tradingSuccess" name="0">已支付</a></li>
            <li><a href="#" id="tradingClose" name="2,3">已关闭</a></li>
            <div class="clear"></div>
        </ul>
    </div>
    <div id="orderList">

    </div>
    <script type="text/html" id="orderList_html">
        {{each Result}}
        <div class="wdzf-list">
            <div class="wdzf-nr1">
                <p>订单号：{{$value.OrderNo}}</p>
                <span>{{$value.AddTime}}</span>
                <div class="clear"></div>
            </div>
            <div class="wdzf-nr2">
                {{each $value.sheetmodelpagedetailoutput}}
                <a href="/jjs/CourseInfo/Index?id={{$value.CourseId}}&CourseType={{$value.CourseType}}">
                    <dl>
                        <dt><img src="{{$value.CourseIamge}}"></dt>
                        <dd>{{$value.CourseName}}</dd>
                        <span>¥ {{$value.Amount}}</span>
                        <div class="clear"></div>
                    </dl>
                </a>
                {{/each}}
            </div>
            <div class="wdzf-nr3">
                {{if $value.State==1}}
                <p><i>选择</i><input type="radio" name="sex" onclick="OrderClick(this)" orderAmount="{{$value.OrderAmount}}" orderNum="{{$value.OrderNo}}" class="jdradio" value="0"></p>
                <span name="{{$value.OrderNo}}" onclick="toOrderDetail(this)">订单详情</span>
                <span style="margin-right:0.5em;color:red;" onclick="OrderCancel(this)" id="{{$value.OrderNo}}">取消订单</span>
                {{/if}}
                {{if $value.State==2 || $value.State==3}}
                <p class="red1">已关闭</p>
                <span class="hui">金额：¥ {{$value.OrderAmount}} <label name="{{$value.OrderNo}}" onclick="toOrderDetail(this)">订单详情</label></span>
                {{/if}}
                {{if $value.State==0}}
                <p name="{{$value.OrderNo}}" onclick="toOrderDetail(this)">订单详情</p>
                <span>实际支付金额：<b>¥ {{$value.OrderAmount}}</b></span>
                {{/if}}
                <div class="clear"></div>
            </div>
        </div>
        {{/each}}
    </script>

    <div class="zanwu" style="display:none;">
        <img src="@HttpContext.Current.Application["DefuleDomain"]/Areas/jjs/resources/images/zanwu.png">
        <p><a href="#">暂无记录</a></p>
    </div>

    <!--未支付底部导航开始-->
    <div class="wdzf-header-nav" style="display:none;">

    </div>
    <!--未支付底部导航结束-->
    <div class="hei4em"></div>
</body>
</html>
<script src="@HttpContext.Current.Application["DefuleDomain"]/Images/Home/js/ajax.js" type="text/javascript"></script>
<script src="@HttpContext.Current.Application["DefuleDomain"]/Areas/jjs/Views/PersonalCenter/MyOrder.js?v=1.0"></script>
