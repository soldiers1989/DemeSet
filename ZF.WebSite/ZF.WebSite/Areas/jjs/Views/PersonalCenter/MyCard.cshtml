
@{
    Layout = "~/Areas/jjs/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="telephone=no" name="format-detection">
    <meta content="email=no" name="format-detection">
    <meta http-equiv="Cache-Control" CONTENT="no-cache">
    <meta http-equiv="pragram" content="no-cache">

    <title>学习卡</title>
</head>
<body class="body">
    <script type="text/html" id="card_html">
        {{if length>0}}
        {{each}}
        <div class="xxk_box">
            <div class="xxk_name">
             {{$value.CardName}}
            </div>
            <div class="xxk_kh">
                <dl>
                    @*<dt>卡号：{{$value.CardCode}}</dt>*@
                    <dd><span class="font01">¥ {{$value.Amount}} </span>
                        {{if !$value.TargetCourse}}
                       通用
                        {{else}}
                      {{$value.TargetCourse}}
                        {{/if}}
                    </dd>
                </dl>
            </div>
            <div class="xxk_zt">
                <p>
                    <span>
                        状态：
                        {{if $value.IfUse==0}}
                            可用
                        {{/if}}
                        {{if $value.IfUse==1}}
                           不可用
                        {{/if}}
                        {{if $value.IfUse==2}}
                          已过期
                        {{/if}}
                    </span>
                    <i>
                        可用期限：
                        {{if !$value.EndDate }}
                        永久有效
                        {{else}}
                        {{$value.EndDate}}前
                        {{/if}}
                    </i>
                </p>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="zanwu">
            <img src="/Areas/jjs/resources/images/zanwu.png">
            <p><a href="#">暂无学习卡</a></p>
        </div>
        {{/if}}

        <div class="xxk_anniu">
            <a href="/jjs/PersonalCenter/MyCardAdd"><img src="@HttpContext.Current.Application["DefuleDomain"]/Areas/jjs/resources/images/xxk01.png"></a>
        </div>
        <div class="hei4em"></div>
    </script>
 
</body>
</html>
<script src="@HttpContext.Current.Application["DefuleDomain"]/Areas/jjs/resources/js/ctj.js?v=1.0"></script>
<script src="@HttpContext.Current.Application["DefuleDomain"]/Images/Home/js/ajax.js" type="text/javascript"></script>
<script src="@HttpContext.Current.Application["DefuleDomain"]/Areas/jjs/Views/PersonalCenter/MyCard.js?v=1.0"></script>
