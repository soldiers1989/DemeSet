
@{
    Layout = "~/Areas/jjs/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="telephone=no" name="format-detection">
    <meta content="email=no" name="format-detection">
    <meta http-equiv="Cache-Control" CONTENT="no-cache">
    <meta http-equiv="pragram" content="no-cache">
    <link href="@HttpContext.Current.Application["DefuleDomain"]/Areas/jjs/resources/style/index1.css" rel="stylesheet" type="text/css">
    <title>试题列表</title>
    <style>
        .stlb_sz_zq {
            background: #40e00c;
        }

        .alfx-head ul li {
            width: 25%;
        }

        .alfx-head1 ul li {
            width: 33%;
            float: left;
            text-align: center;
            height: 3em;
            line-height: 3em;
        }

        .alfx-head1 {
            width: 100%;
            height: 3em;
            overflow: hidden;
            position: fixed;
            bottom: 0em;
            z-index: 999;
            background: #fff;
        }

        .alfx-head ul .al-hd04 {
            background: #56ff00;
            color: #fff;
        }

        .close {
            width: 100%;
        }

        * {
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
    </style>
</head>
<body>
    <div class="alfx-box">
        <div id="Item">
        </div>
        <script type="text/html" id="Item_html">
            <input type="hidden" id="QuestionId" value="{{Id}}"/>
            <input type="hidden" id="Type" value="{{Type}}"/>
            <input type="hidden" id="SubjectType" value="{{SubjectType}}"/>
            <input type="hidden" id="SubjectTypeName" value="{{SubjectTypeName}}"/>
            <input type="hidden" id="input_type" value="{{input_type}}" />
            <div class="alfx-list01">
                <div class="alfx-tit">
                    <b>{{#SubjectName}}</b><span class="red">{{index}}</span>/{{lenght}}
                </div>
            </div>
            {{if Description!=""}}
            <div class="line_3px"></div>
            <div class="alfx-list02">
                {{#Description}}
                <div class="clear"></div>
            </div>
            {{/if}}
            <div class="line_3px"></div>
            <div class="alfx-list03">
                {{#QuestionContent}}
            </div>
            <div class="line_3px"></div>
            <div class="alfx-list04">
                <ul>
                    {{each option}}
                    {{if $value.ischeck==1 }}
                    <li onclick="checkState(this)" checkType="{{input_type}}" class="answer_input"><input value="{{$value.id}}" checked name="answer_{{Id}}" id="{{$value.id}}" type="{{input_type}}" /><label for="{{$value.id}}">{{#$value.content}}</label></li>
                    {{else}}
                    <li onclick="checkState(this)" checkType="{{input_type}}" class="answer_input"><input value="{{$value.id}}" name="answer_{{Id}}" id="{{$value.id}}" class="answer_input" type="{{input_type}}" /><label for="{{$value.id}}">{{#$value.content}}</label></li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
            <div class="line_3px"></div>
            <div class="line_3px"></div>
        </script>
        <div class="alfx-head">
            <ul>
                <li class="al-hd01">上一题</li>
                <li class="al-hd02">试题列表</li>
                <li class="al-hd03">下一题</li>
                <li class="al-hd04">交卷</li>
                <div class="clear"></div>
            </ul>
        </div>
    </div>
    <div class="stlb-box" style="display: none;">
        <div class='stlb-list'>
            <div class="stlb-tit">
                <b>试题列表</b>
            </div>
            <div class="stlb-bj">
                <span><b class="bj01"></b>未答<div class="clear"></div></span>
                <span><b class="bj02"></b>已答<div class="clear"></div></span>
                <span><b class="bj03"></b>标记<div class="clear"></div></span>
                <div class="clear"></div>
            </div>
        </div>
        <div class="line_3px"></div>
        <div class="stlb_sz">
            <div class="stlb_sz_news" id="Option">
            </div>
            <script type="text/html" id="Option_html">
                {{each ChapterQuestionsDetailOutput}}
                <span class="{{$value.Id}}" index="{{$index+1}}">{{$index+1}}</span>
                @*<span class="stlb_sz_zq" index="{{$index+1}}">{{$index+1}}</span>*@
                {{/each}}
            </script>
        </div>
        <div class="alfx-head1">
            <ul>
                <li></li>
                <li class="close">X</li>
                <div class="clear"></div>
            </ul>
        </div>
    </div>
    <input type="hidden" Id="ChapterId" value="@ViewBag.ChapterId" />
    <input type="hidden" Id="ChapterQuestionsId" value="@ViewBag.ChapterQuestionsId" />
</body>
</html>
<script src="@HttpContext.Current.Application["DefuleDomain"]/Areas/jjs/resources/js/ctj.js?v=1.0"></script>
<script src="@HttpContext.Current.Application["DefuleDomain"]/Areas/jjs/Views/Practice/ChapterPractice.js?v=1.0"></script>
